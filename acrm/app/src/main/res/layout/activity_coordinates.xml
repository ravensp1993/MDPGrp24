
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.example.mdpgrp9.arcm.Coordinates"
android:id="@+id/coordinatelayout"
    >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Enter coordinates for the robot"
    android:id="@+id/message"
    android:layout_marginTop="62dp"
    android:layout_gravity="left"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/Xpos"
    android:id="@+id/xPosold"
    android:layout_marginTop="58dp"
    android:layout_below="@+id/message"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/xPosText"
    android:layout_alignTop="@+id/xPosold"
    android:layout_toRightOf="@+id/xPosold"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:text="" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/Ypos"
    android:id="@+id/yPosold"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/yPosText"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/yPosold"
    android:layout_toRightOf="@+id/yPosold"
    android:layout_toEndOf="@+id/yPosold"
    android:text="" />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Begin"
    android:id="@+id/begin"
    android:onClick="BeginTheRobot"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="88dp" />

</RelativeLayout>

